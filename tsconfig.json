{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "amd",
    "baseUrl": ".",
    "rootDir": "./",
    "isolatedModules": true,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noEmitOnError": false,
    "removeComments": true,
    "typeRoots": [
      "./api"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}